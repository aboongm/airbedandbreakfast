<div 
  data-controller="geolocation" 
  class="container mx-auto py-16"
  data-latitude="<%= current_user&.profile&.latitude %>"
  data-longitude="<%= current_user&.profile&.longitude %>
"
>
  <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-4 sm:gap-x-6 lg:grid-cols-5 xl:gap-x-8">
    <% @properties.each do |property| %>
      <li 
        class="relative"
        data-geolocation-target="property"
        data-latitude="<%= property.latitude %>"
        data-longitude="<%= property.longitude %>"
      >
        <div class="group block w-full aspect-w-10 aspect-h-7 rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-offset">
          <%= image_tag property.default_image, class:"rounded-xl object-cover pointer events-none group:hover:opacity-75"  %>
          <button type="button" class="absolute inset-0 focus:outline-none">
            <span class="sr-only">View details for Img</span>
          </button>
          <div class="flex flex-row-reverse p-3">
            <svg 
              data-controller="favorites"
              data-action="click->favorites#favorite"
              data-user-logged-in="<%= user_signed_in? %>"
              data-user-id="<%= current_user.id %>"
              data-property-id="<%= property.id %>"
              data-favorite-url="<%= api_favorites_path %>"
              data-unfavorite-url="<%= api_favorite_path(current_user.favorites.find_by(property: property)) if current_user&.favorited_properties.include?(property) %>"
              data-favorite-id="<%= current_user.favorites.find_by(property: property).id if current_user&.favorited_properties.include?(property) %>"
              data-favorited="<%= current_user&.favorites.where(property: property).exists? %>"
              xmlns="http://www.w3.org/2000/svg" 
              fill="<%= current_user&.favorited_properties.include?(property) ? 'red' : 'lightgray' %>" 
              viewBox="0 0 24 24" 
              stroke-width="1.5" 
              stroke="#fff" 
              class="w-6 h-6 cursor-pointer"
              >
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
            </svg>
          </div>
        </div>
        <p class="mt-2 block text-sm font-medium font-bold text-gray-900 truncate pointer-events-none"><%= property.city %> <%= property.state %> <%= property.country %>
        </p>
        <p class="block text-sm font-medium text-gray-500 pointer-events-none"><%= property.average_rating.round(1) %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 inline-block relative" style= "bottom: 1px">
            <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
          </svg>
        </p>
        <p data-distance-away class="block text-sm font-medium text-gray-500 pointer-events-none"></p>
        <p class="block text-sm font-medium text-gray-500 pointer-events-none">June 19-24</p>
        <p class="block text-sm font-medium text-gray-500 pointer-events-none"><span class="text-black font-bold"><%= humanized_money_with_symbol(property.price) %></span> per night</p>
      </li>
    <% end %>
  </ul>
</div>
